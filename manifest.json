{
  "manifest_version": 2,
  "name": "Reload All Tabs",
  "description": "Reload all tabas",
  "version": "1.0.0",
  "permissions": [
        "tabs"
  		],
  "background": {"page" : "data/background.html"},
  "browser_action": {
      "default_icon": {                    // optional
      "19": "Icon-19.png",           // optional
      "38": "Icon-38.png"            // optional
      }
  },
  "icons": {
    "16": "Icon-16.png",
    "48": "Icon-48.png",
    "128": "Icon-128.png"
  }
}
